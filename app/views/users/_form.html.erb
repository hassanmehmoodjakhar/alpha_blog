<% if @user.errors.any? %> 
  <h2>The following errors prevented the article from being saved</h2> 
  <ul> 
    <% @user.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
    <% end %> 
  </ul>
<% end %>



<%= form_with(model: @user, local: true) do |f| %>

<p>
<%= f.label :username %><br/>
<%= f.text_field :username, placeholder: "Enter your username" %><br/><br/>

<%= f.label :email %><br/>
<%= f.email_field :email, placeholder: "Enter your email" %><br/><br>

<%= f.label :password %><br/>
<%= f.password_field :password, placeholder: "Choose a password" %><br/><br/>


<%= f.submit placeholder: "Create User", class: "btn btn-success" %>

</p>

<% end %>