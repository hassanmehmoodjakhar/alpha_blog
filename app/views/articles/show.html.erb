<h1 class="text-center text-white mt-2">Showing Article Detail</h1>

<div class="container">
<div class="row justify-content-md-center">
<div class="col-8 mt-4">
<div class="card text-center shadow mb-5 bg-white rounded">
  <div class="card-header">
    by <%= @article.user.username if @article.user %>
  </div>
  <div class="card-body p-3">
    <h5 class="card-title"><%= link_to @article.title, article_path(@article), class: "text-success" %></h5>
    <p class="card-text"><%= @article.description %></p>
    <div class="container">
     <%# <a href="#" class="btn btn-outline-success">View</a> %>
    <% if logged_in? && @article.user == current_user %>
    <%# <a href="#" class="btn btn-outline-info">Edit</a> %>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
    <%# <a href="#" class="btn btn-outline-danger">Delete</a> %>
    <%= button_to 'Delete', article_path(@article), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, 
    class: "btn btn-outline-danger mt-1"  %>

    <% end %>
    </div>
   
  </div>
  <div class="card-footer text-muted">
  <small>Created at <%= time_ago_in_words(@article.created_at) %> ago </small>
    
  </div>
</div>
</div>
</div>
</div>

