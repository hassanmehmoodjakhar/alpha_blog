<div class="container border-primary p-5 text-white text-center">
    <h1><%= @category.name %> Category</h1>
    <div class="container border-primary p-5 text-white text-center">
    
    <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit the Category", edit_category_path(@category), class: "btn btn-outline-info" %>
    <% end %>
    </div>
    <br/>
    <h1>Articles</h1>
     <%= render 'articles/article' %>
    <div class="container text-center">
         <%= link_to 'Cancel and Return to Articles Listing Page', articles_path, class: "text-white" %>
    </div>

    
</div>